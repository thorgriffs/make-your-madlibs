<div class="row container-fluid pb-4 mb-5" style="padding-top: 7%;">
  <div class="col-12">
    <div data-aos="flip-left" class="card" style="width: 100%;">
      <div class="card-body">
        <h4 class="card-title mt-5 ml-5" data-aos="fade-right" data-aos-duration="2000" id="resultTitle"
          style="font-weight: bold; font-size:38px; letter-spacing:5px">
          {{title}}</h5>
          <p class="m-5 stories" style="font-size: large;" data-aos="fade-left" data-aos-duration="2000">
            {{storyBody}}
          </p>
      </div>
    </div>
  </div>
</div>